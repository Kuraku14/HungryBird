        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="450dp"
            android:layout_height="225dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/credit_card_bg">

            <TextView
                android:id="@+id/textView2"
                fontPath="fonts/Pacifico.ttf"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:paddingLeft="20dp"
                android:text="@string/app_name"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cart_checkout_credit_num_et"
                fontPath="fonts/Credit-Card.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"

                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="83dp"
                android:layout_marginStart="83dp"
                android:background="@android:color/transparent"
                android:digits="0123456789"
                android:ems="10"
                android:gravity="end"
                android:hint="0000000000000000"
                android:inputType="number"
                android:maxLength="16"
                android:paddingRight="20dp"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/cart_checkout_expiry_month_et"
                    fontPath="fonts/Credit-Card.ttf"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:ems="10"
                    android:hint="00"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorSecondaryText"
                    android:textSize="14sp" />

                <TextView
                    fontPath="fonts/Credit-Card.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/cart_checkout_expiry_year_et"
                    fontPath="fonts/Credit-Card.ttf"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:ems="10"
                    android:hint="0000"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorSecondaryText"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/cart_checkout_cvc_et"
                fontPath="fonts/Credit-Card.ttf"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/transparent"
                android:digits="0123456789"
                android:ems="10"
                android:gravity="end"
                android:hint="000"
                android:inputType="number"
                android:maxLength="4"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout2"
                android:layout_alignLeft="@+id/cart_checkout_cvc_et"
                android:layout_alignStart="@+id/cart_checkout_cvc_et"
                android:text="Expiry"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryText" />
        </RelativeLayout>

        <TextView
