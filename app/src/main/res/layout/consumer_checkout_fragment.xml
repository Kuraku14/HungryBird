        <RelativeLayout
            android:layout_width="450dp"
            android:layout_height="225dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/credit_card_bg">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                fontPath = "fonts/Pacifico.ttf"
                android:text="@string/app_name"
                android:textAllCaps="false"
                android:paddingLeft="20dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cart_checkout_credit_num_et"
                fontPath="fonts/Credit-Card.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="83dp"
                android:layout_marginStart="83dp"
                android:paddingRight="20dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="end"
                android:hint="0000000000000000"
                android:inputType="number"
                android:maxLength="16"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:textColorHint="@color/colorSecondaryText" />

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="14dp"
                    android:id="@+id/linearLayout2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="11dp">

                    <EditText
                        android:id="@+id/cart_checkout_expiry_month_et"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        fontPath="fonts/Credit-Card.ttf"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="00"
                        android:textColor="@color/colorSecondaryText"
                        android:textColorHint="@color/colorSecondaryText"
                        android:maxLength="2" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / "
                        android:textSize="16dp"
                        fontPath="fonts/Credit-Card.ttf"
                        android:textColor="@color/colorSecondaryText" />
                    <EditText
                        android:id="@+id/cart_checkout_expiry_year_et"
                        android:layout_width="100dp"
                        fontPath="fonts/Credit-Card.ttf"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="0000"
                        android:textColor="@color/colorSecondaryText"
                        android:textColorHint="@color/colorSecondaryText"
                        android:maxLength="4" />
                </LinearLayout>
                <EditText
                    android:id="@+id/cart_checkout_cvc_et"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="0000"
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/colorSecondaryText"
                    android:textColorHint="@color/colorSecondaryText"
                    android:background="@android:color/transparent"
                    fontPath="fonts/Credit-Card.ttf"
                    android:maxLength="4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
