<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            app:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/selectedDishPic_iv"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/placeholder"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/dishTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/cardview"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:transitionName="dishTitleTransition"
            tools:text="Paneer Tikka Masala" />

        <TextView
            android:id="@+id/dishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/dishTitle"
            android:layout_marginRight="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:transitionName="dishPriceTransition"
            tools:text="$7.99" />

        <TextView
            android:id="@+id/servesLabel"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dishPrice"
            android:layout_marginLeft="5dp"
            android:text="Serves:" />

        <TextView
            android:id="@+id/dishServingSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dishPrice"
            android:layout_toRightOf="@+id/servesLabel"
            android:text="2"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dishDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dishServingSize"
            android:layout_marginLeft="5dp"
            tools:text="This is an indian cheese filled with gravy. Mmmm mmm good! It's a classic." />

        <LinearLayout
            android:id="@+id/add_to_card_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dishDescription"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/tvMinus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:drawableLeft="@drawable/ic_remove_circle_outline_black_24px"
                android:gravity="center_vertical" />


            <TextView
                android:id="@+id/tvDishQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvMinus"
                android:layout_toRightOf="@id/tvMinus"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="0"
                tools:text="12" />

            <TextView
                android:id="@+id/tvPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvMinus"
                android:layout_below="@id/dishDescription"
                android:layout_toRightOf="@id/tvDishQuantity"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_add_cart_circle_outline_black_24x"
                android:gravity="center_vertical" />


            <TextView
                android:id="@+id/tvAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignBaseline="@+id/tvMinus"

                android:layout_toRightOf="@id/tvPlus"
                android:layout_weight="2"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Add To Cart" />
        </LinearLayout>

        <TextView
            android:id="@+id/moreDishesFromCurrentChef_tv"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/add_to_card_panel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="More from this chef"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="16sp"
            android:textStyle="bold" />

        <include
            android:id="@+id/content"
            layout="@layout/myofferings_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moreDishesFromCurrentChef_tv"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</layout>