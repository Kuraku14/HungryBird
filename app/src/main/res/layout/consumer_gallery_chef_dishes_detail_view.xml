<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/chefProfilePic_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/chefName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/chefProfilePic_iv"
            android:layout_toRightOf="@+id/chefProfilePic_iv"
            android:text="Betty Crocker" />

        <ImageView
            android:id="@+id/selectedDishPic_iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:maxHeight="100dp"
            app:srcCompat="@drawable/ic_no_image_available"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/chefProfilePic_iv" />

        <TextView
            android:id="@+id/dishTitle"
            android:transitionName="dishTitleTransition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/selectedDishPic_iv"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Paneer Tikka Masala"
            android:layout_toLeftOf="@+id/dishPrice"
            android:layout_toStartOf="@+id/dishPrice" />

        <TextView
            android:id="@+id/dishPrice"
            android:transitionName="dishPriceTransition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="$7.99"
            android:layout_alignTop="@+id/dishTitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/dishServingSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dishPrice"
            tools:text="2 people" />

        <TextView
            android:id="@+id/dishVegOrNonveg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dishServingSize"
            tools:text="Veggie Dish" />

        <TextView
            android:id="@+id/dishAllergen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dishVegOrNonveg"
            tools:text="Nuts" />

        <TextView
            android:id="@+id/dishSpiceLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dishAllergen"
            tools:text="Medium" />

        <TextView
            android:id="@+id/dishDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is an indian cheese filled with gravy. Mmmm mmm good! It's a classic."
            android:layout_below="@+id/dishSpiceLevel"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to cart"
            android:layout_above="@+id/dishTitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/moreDishesFromCurrentChef_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dishDescription"
            android:layout_marginTop="10dp"
            android:text="More from this chef"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/moreDishesFromCurrentChef_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/moreDishesFromCurrentChef_tv">

        </FrameLayout>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/dishPrice"
            android:layout_toEndOf="@+id/dishTitle"
            android:layout_toRightOf="@+id/dishTitle"
            android:ems="10"
            android:inputType="number"
            android:maxLength="2"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dishVegOrNonveg"
            android:layout_toLeftOf="@+id/editText2"
            android:layout_toStartOf="@+id/editText2"
            android:text="X" />

    </RelativeLayout>
</layout>