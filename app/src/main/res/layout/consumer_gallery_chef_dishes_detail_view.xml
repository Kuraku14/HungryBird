<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/chef_header"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chefProfilePic_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                app:srcCompat="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/chefName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/chefProfilePic_iv"
                android:layout_toRightOf="@+id/chefProfilePic_iv"
                android:text="Betty Crocker" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/selectedDishPic_iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/chef_header"
            android:background="@android:color/darker_gray"
            android:maxHeight="100dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_no_image_available" />

        <TextView
            android:id="@+id/dishTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/selectedDishPic_iv"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:transitionName="dishTitleTransition"
            tools:text="Paneer Tikka Masala" />

        <TextView
            android:id="@+id/dishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/dishTitle"
            android:layout_marginRight="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:transitionName="dishPriceTransition"
            tools:text="$7.99" />

        <TextView
            android:id="@+id/servesLabel"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dishPrice"
            android:layout_marginLeft="5dp"
            android:text="Serves:" />

        <TextView
            android:id="@+id/dishServingSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dishPrice"
            android:layout_toRightOf="@+id/servesLabel"
            android:text="2"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dishDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_below="@+id/dishServingSize"
            android:layout_marginLeft="5dp"
            tools:text="This is an indian cheese filled with gravy. Mmmm mmm good! It's a classic." />

        <LinearLayout
            android:id="@+id/add_to_card_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dishDescription"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/tvMinus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:drawableLeft="@drawable/ic_remove_circle_outline_black_24px"
                android:gravity="center_vertical" />


            <TextView
                android:id="@+id/tvDishQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvMinus"
                android:layout_toRightOf="@id/tvMinus"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="0"
                tools:text="12" />

            <TextView
                android:id="@+id/tvPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvMinus"
                android:layout_below="@id/dishDescription"
                android:layout_toRightOf="@id/tvDishQuantity"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_add_cart_circle_outline_black_24x"
                android:gravity="center_vertical" />


            <TextView
                android:id="@+id/tvAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/tvMinus"

                android:layout_toRightOf="@id/tvPlus"
                android:layout_weight="2"
                android:background="@color/facebook_normal_blue"
                android:gravity="center"
                android:text="Add To Cart" />
        </LinearLayout>

        <TextView
            android:id="@+id/moreDishesFromCurrentChef_tv"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/add_to_card_panel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="More from this chef"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="16sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/moreDishesFromCurrentChef_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/moreDishesFromCurrentChef_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"></FrameLayout>
    </RelativeLayout>
</layout>